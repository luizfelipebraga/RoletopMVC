<main>
    <div class="espaco"></div>
    <h2>Login do Cliente</h2>

    <form method="POST" action='@Url.Action("Login", "Cliente")'>
        <div>
            <label for="E-mail">E-mail</label>
            <br />
            <input id="email" type="text" maxlength="50" minlength="3" name="email" />
        </div>

        <div>
            <label for="senha">Senha</label>
            <br />
            <input id="senha" type="password" maxlength="20" minlength="3" name="senha" />
        </div>
        <input class= "center" type="submit" value="Entrar">
    </form>
    
</main>